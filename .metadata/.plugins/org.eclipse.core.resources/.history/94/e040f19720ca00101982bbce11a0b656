package com.klef.fsd.sdp.hotelhub.controller;

import com.klef.fsd.sdp.hotelhub.model.Booking;
import com.klef.fsd.sdp.hotelhub.model.Cab;       // ðŸ‘ˆ Import Cab
import com.klef.fsd.sdp.hotelhub.model.FoodItem;  // ðŸ‘ˆ Import FoodItem
import com.klef.fsd.sdp.hotelhub.model.Manager;
import com.klef.fsd.sdp.hotelhub.model.Room;
import com.klef.fsd.sdp.hotelhub.service.ManagerService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;
import java.util.List;

@RestController
@RequestMapping("/manager")
@CrossOrigin("*")
public class ManagerController {

    @Autowired
    private ManagerService managerService;

    // --- Authentication ---
    @PostMapping("/checkmanagerlogin")
    public ResponseEntity<?> checkManagerLogin(@RequestBody Manager manager) {
        Manager m = managerService.checkManagerLogin(manager.getUsername(), manager.getPassword());
        if (m != null) {
            return ResponseEntity.ok(m);
        }
        return ResponseEntity.status(401).body("Invalid credentials");
    }

    // --- Room Management ---
    @PostMapping("/addroom")
    public String addRoom(@RequestBody Room room) {
        return managerService.addRoom(room);
    }

    @PostMapping("/updateroom")
    public String updateRoom(@RequestBody Room room) {
        return managerService.updateRoom(room);
    }

    @DeleteMapping("/deleteroom/{id}")
    public String deleteRoom(@PathVariable int id) {
        return managerService.deleteRoom(id);
    }
    
    @GetMapping("/viewmyrooms/{managerId}")
    public List<Room> viewMyRooms(@PathVariable int managerId) {
        return managerService.viewAllRoomsByManager(managerId);
    }

    @GetMapping("/viewbookings/{managerId}")
    public List<Booking> viewBookings(@PathVariable int managerId) {
        return managerService.viewBookingsForManager(managerId);
    }

    // --- ðŸ‘‡ NEW: Food Menu Management ---
    @PostMapping("/addfood")
    public String addFood(@RequestBody FoodItem foodItem) {
        // Note: Ensure you added 'addFoodItem' to your ManagerService interface/impl
        return ((com.klef.fsd.sdp.hotelhub.service.ManagerServiceImpl)managerService).addFoodItem(foodItem).getName() + " added successfully";
    }

    @GetMapping("/viewfood/{managerId}")
    public List<FoodItem> viewFood(@PathVariable int managerId) {
        return ((com.klef.fsd.sdp.hotelhub.service.ManagerServiceImpl)managerService).viewFoodMenu(managerId);
    }

    @DeleteMapping("/deletefood/{id}")
    public String deleteFood(@PathVariable int id) {
        ((com.klef.fsd.sdp.hotelhub.service.ManagerServiceImpl)managerService).deleteFoodItem(id);
        return "Food Item Deleted";
    }

    // --- ðŸ‘‡ NEW: Cab Management ---
    @PostMapping("/addcab")
    public String addCab(@RequestBody Cab cab) {
        return ((com.klef.fsd.sdp.hotelhub.service.ManagerServiceImpl)managerService).addCab(cab).getCarModel() + " added successfully";
    }

    @GetMapping("/viewcabs/{managerId}")
    public List<Cab> viewCabs(@PathVariable int managerId) {
        return ((com.klef.fsd.sdp.hotelhub.service.ManagerServiceImpl)managerService).viewMyCabs(managerId);
    }
    
    @DeleteMapping("/deletecab/{id}")
    public String deleteCab(@PathVariable int id) {
        ((com.klef.fsd.sdp.hotelhub.service.ManagerServiceImpl)managerService).deleteCab(id);
        return "Cab Deleted";
    }
}